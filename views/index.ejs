
<%- include("header") -%>

  <section id="hero" class="d-flex align-items-center">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
          <h1>Mozilla Campus Club Of SLIIT</h1>
          <h2>
            Firefox Student Ambassadors of Sri Lanka Institute of Information
            Technology
          </h2>
          <div class="d-flex">
            <a href="/contact_us" class="btn btn-primary btn-lg scrollto">CONTACT US</a>
            <a class="btn btn-lg btn-new-member"><i class="bi bi-person-plus-fill"></i> New Member</a>
          </div>
        </div>
        <div class="col-lg-6 order-1 order-lg-2 mx-auto hero-img">
          <img src="assets/img/hero-img.png" class=" img-fluid float-end hero-img hero-desktop" alt="" />
          <img src="assets/img/hero-mobile-img.png" class=" img-fluid mx-auto hero-img hero-mobile" alt="" />
        </div>
      </div>
    </div>
  </section>
  <!-- End Hero -->

  <main id="main">


    <!-- ======= About Section ======= -->
    <section id="about" class="about">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="col-lg-5">
            <img src="assets/img/clubs-home.png" class="img-fluid" alt="" />
          </div>
          <div class="col-lg-7 pt-4 pt-lg-0 content ">
            <h3>
              What are we?
            </h3>
            <p>
              A Mozilla Club brings people together locally to build the open
              web on University and College campuses worldwide. The Internet is
              more than computers and code. The Internet is about people. And
              this is what Mozilla Clubs are all about: interacting with others
              to share, learn, teach, protect and build upon platforms, to make
              things that matter. Our Clubs are human structures that make the
              web real.
            </p>
          </div>
        </div>
      </div>
    </section>
    <!-- End About Section -->

    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts">
      <div class="container-fluid">
        <div class="row counters">
          <div class="col-lg-4 col-6 text-center">
            <span data-purecounter-start="0" data-purecounter-end="232" data-purecounter-duration="1" class="purecounter"></span>
            <p>Members</p>
          </div>

          <div class="col-lg-4 col-6 text-center">
            <span data-purecounter-start="0" data-purecounter-end="<%=eventsData.length%>" data-purecounter-duration="1" class="purecounter"></span>
            <p>Events</p>
          </div>

          <div class="col-lg-4 text-center">
            <span data-purecounter-start="0" data-purecounter-end="<%= blog.length %>" data-purecounter-duration="1" class="purecounter"></span>
            <p>Blogs</p>
          </div>


        </div>
      </div>
    </section>
    <!-- End Counts Section -->


    <!-- ======= Testimonials Section ======= -->
    <section id="testimonials" class="blogs section-bg">
      <div class="container-fluid">
        <div class="section-title">
          <span>BLOGS</span>
          <h2>BLOGS</h2>
          <p>
            Here you can discover various and updated information which can enhance
            your knowledge. We provide significant articles related to technology.
          </p>
        </div>
        <div class="card-group">
          <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">
              <% blog.forEach(function(blog) { %>
              <div class="swiper-slide">
                <div class="testimonial-item h-100 d-flex justify-content-center">
                  <div class="card h-100 ">
                    <img src="<%= blog.image %>" class="card-img-top" alt="..." />
                    <div class="card-body d-flex flex-column">
                      <h3 class="price-text"><%= blog.title %></h3>
                      <p><%= blog.content.substring(0,190) + "..." %></p>
                      <a href="<%= blog.url %>" class="w-100 mt-auto btn btn-lg btn-primary btn-card">
                        Read More</a>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
          <div class="swiper-pagination"></div>
        </div>
        <div class="blog-btn">
          <a href="/blogs" class="btn btn-outline-primary btn-lg">View More</a>
        </div>
      </div>

    </section>
    <!-- End Testimonials Section -->

    <!-- ======= Cta Section ======= -->
    <section id="cta" class="cta">
      <div class="container-fluid">
        <div class="text-center">
          <h3>Subscribe to our Blog Posts!</h3>
          <p>
            Subscribe to our blog posts via e-mail to get latest updates of our tech blogs!
          </p>
          <a class="btn cta-btn scrollto" href="#footer">SUBSCRIBE</a>
        </div>
      </div>
    </section>
    <!-- End Cta Section -->

    <!-- ======= Youtube Section ======= -->
    <section id="youtube">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
            <h1>Catch us on
              YOUTUBE!</h1>
            <p>Here you can discover various and updated information which can enhance your knowledge. We provide significant Videos related to technology.</p>
            <div class="d-block">
              <a href="https://www.youtube.com/channel/UCx0d0jws6qZvjwiD8H8BlRg" class="btn btn-outline-danger btn-lg">Explore! <i class="bi bi-youtube"></i></a>
            </div>
          </div>
          <div class="col-lg-6 order-1 order-lg-2 mx-auto">
            <img src="./assets/img/youtube.png" class="img-fluid " alt="">
          </div>
        </div>
      </div>


    </section>




    <!-- ======= Event Section ======= -->
    <section id="events-card" class="event section-bg">
      <div class="container-fluid">
        <div class="section-title">
          <span>Check out our Events and Webinars!</span>
          <h2>Check out our Events and Webinars!</h2>


          <div class="card-group">
            <div class="event-slider swiper" data-aos="fade-up" data-aos-delay="100">
              <div class="swiper-wrapper">
                <% eventsData.forEach(event => { %>
                <div class="swiper-slide">
                    <div class="card h-100 ">
                      <img src="<%=event.img%>" class="card-img-top" alt="..." />
                      <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%=event.title%></h5>
                        <small class="mb-2 text-muted"><i class="bi bi-geo-alt-fill"></i> <%=event.location%> &nbsp;<i class="bi bi-calendar"></i> <%=event.date%> &nbsp;<i class="bi bi-alarm"></i> <%=event.time%> &nbsp;</small>
                        <a href="<%=event.url%>" class="btn-flash-border-primary mt-auto">View more!</a>
                      </div>
                    </div>
                </div>
                <% }); %>
              </div>
              <div class="swiper-scrollbar"></div>
            </div>
          </div>
      
       
        <div class="blog-btn">
          <a href="/events" class="btn btn-outline-primary btn-lg">View More</a>
        </div>
      </div>
    </section>
    <!-- End Team Section -->

    <section id="team">
      <div class="container-fluid">
        <h1 class="team-title">Members Who Work Together!</h1>

        <div class="container">

        <div class="swiper team-slider">
          <div class="swiper-wrapper">

            <% committee.forEach(member => { %>
            <div class="swiper-slide">
              <img src="<%= member.img %>" class="team-img" alt=""/>
              <div class="card team-card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%=member.position%></h5>
                  <p class="card-text">
                    <%= member.name%>
                  </p>
                </div>
              </div>
            </div>
            <%}); %>
          
          </div>
          <!-- <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div> -->
        </div>
      </div>
               
        </div>
      </div>
    </section>
  </main>
  <!-- End #main -->

  <%- include("footer") -%>