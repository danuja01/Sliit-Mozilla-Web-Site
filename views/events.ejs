    <main id="main">

      <section id="events-card" class="event section-bg">
        <div class="container-fluid">
          <div class="section-title">
            <span>Check out our Upcoming Events!</span>
            <h2>Check out our Upcoming Events!</h2>
  
          </div>

            <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 g-4">
              <% eventsData.forEach(event => { %>
                <div class="col">
                <div class="swiper-slide">
                    <div class="card h-100 ">
                      <img src="<%=event.img%>" class="card-img-top" alt="..." />
                      <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%=event.title%></h5>
                        <small class="mb-2 text-muted"><i class="bi bi-geo-alt-fill"></i> <%=event.location%> &nbsp;<i class="bi bi-calendar"></i> <%=event.date%> &nbsp;<i class="bi bi-alarm"></i> <%=event.time%> &nbsp;</small>
                        <p class="card-text"><%=event.description%></p>
                        <a href="<%=event.url%>" class="btn-flash-border-primary mt-auto">View more!</a>
                      </div>
                    </div>
                </div>
              </div>
                <% }); %>
            </div>
          <div class="blog-btn">
            <a href="/events" class="btn btn-outline-primary btn-lg">View More</a>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

