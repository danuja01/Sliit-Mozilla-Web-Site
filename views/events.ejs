    <!-- Template Main JS File -->
    <script>
            fetch("/data/events")
            .then(function (response) {
              return response.json();
            })
            .then(function (data) {
              appendData(data);
            })
            .catch(function (err) {
              console.log(err);
            });

            function appendData(data) {
            var mainContainer = document.getElementById("card-area");
            
            for (var i = 0; i < data.length; i++) {
                
                var card = document.createElement("div");

                card.className = "col-lg-4 col-md-4 d-flex justify-content-center align-items-stretch";
                card.innerHTML = `
                <div class="card" style="width: 20rem; margin-bottom: 2rem">
                <div class="card-img">
                    <img src="${data[i].image}" alt="Image" class="img-fluid card-img-top">
                </div>
                <div class="card-body">
                    <h3 class="card-title">${data[i].blog_title}</h3>
                    <p class="card-text">${data[i].description}</p>
                    <a href="${data[i].link}" class="readmore">Read More</a>
                </div>
                </div>`;

                mainContainer.appendChild(card);
            }
        }
    </script>
    <script src="assets/js/main.js"></script>
    <script type="text/javascript"></script>
